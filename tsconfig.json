{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./build"
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}